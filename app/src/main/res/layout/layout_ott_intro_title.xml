<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_ott_intro_title_container"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/layout_ott_intro_title_view_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background_ott_intro_title"
        app:layout_constraintBottom_toTopOf="@id/layout_ott_intro_title_view_bottom"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/layout_ott_intro_title_view_top"
        android:id="@+id/layout_ott_intro_title_view_bottom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="39sp"
        android:textStyle="bold"
        android:text="지금 무료로\n무제한 감상 시작"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/layout_ott_intro_title_text_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>