<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/market_my_page_edit_text_email"
        android:inputType="textEmailAddress"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/market_my_page_edit_text_password"
        app:layout_constraintTop_toBottomOf="@id/market_my_page_edit_text_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/market_my_page_button_sign_up"
        app:layout_constraintTop_toBottomOf="@id/market_my_page_edit_text_password"
        app:layout_constraintEnd_toStartOf="@id/market_my_page_button_login_logout"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/orange"
        android:text="@string/market_sign_up"
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/market_my_page_button_login_logout"
        app:layout_constraintEnd_toEndOf="@id/market_my_page_edit_text_password"
        app:layout_constraintTop_toBottomOf="@id/market_my_page_edit_text_password"
        android:layout_width="wrap_content"
        android:text="@string/market_login"
        android:enabled="false"
        android:backgroundTint="@color/orange"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>