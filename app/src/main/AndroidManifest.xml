<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nosorae.module_basic">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- P5 Picture Frame -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- P7 Recorder -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- P8 Web -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.ModuleBasic">

        <activity android:name=".p1_bmi.BMIActivity" />
        <activity android:name=".p1_bmi.BMIResultActivity" />
        <activity android:name=".p2_lotto.LottoActivity" />
        <activity
            android:name=".p3_diary.DiaryActivity"
            android:theme="@style/Theme.ModuleBasic.NoActionBar" />
        <activity
            android:name=".p3_diary.DiaryResultActivity"
            android:theme="@style/Theme.ModuleBasic.NoActionBar" />
        <activity
            android:name=".p4_calculator.CalculatorActivity"
            android:theme="@style/Theme.ModuleBasic.NoActionBar" />
        <activity
            android:name=".p5_picture_frame.PictureFrameActivity"
            android:theme="@style/Theme.ModuleBasic.NoActionBar" />
        <activity
            android:name=".p5_picture_frame.PictureFrameResultActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.ModuleBasic.NoActionBar" />
        <activity
            android:name=".p6_pomodoro.PomodoroActivity"
            android:theme="@style/Theme.ModuleBasic.Pomodoro" />
        <activity
            android:name=".p7_recorder.RecorderActivity"
            android:theme="@style/Theme.ModuleBasic.Recorder" />

        <activity android:name=".p8_web.WebActivity"
            android:theme="@style/Theme.ModuleBasic.NoActionBar"/>

        <activity android:name=".p9_push.PushActivity"
            android:theme="@style/Theme.ModuleBasic.NoActionBar"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".p9_push.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>